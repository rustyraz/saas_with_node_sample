<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-info">
			<div class="panel-heading">
				<h4>LOGIN FORM</h4>
			</div>
			<div class="panel-body">
				<form method="POST" class="form form-vertical" action="/user/login">
					{{#if error}}
						<p class="alert alert-danger">{{error}}</p>
					{{/if}}
					<div class="form-group">
						<label for="email">Email : </label>
						<input type="email" name="email" id="email" class="form-control" placeholder="Email"required />
					</div>
					<div class="form-group">
						<label for="password">Password :</label>
						<input name="password" type="password" id="password" class="form-control" placeholder="password" required autocomplete="off"/>						
					</div>

					<div class="form-group">
						<label >
						<input type="checkbox" name="remember_me" checked="checked" /> Remember me</label>

						<a class="pull-right" href="#">Forgot password</a>
					</div>

					<div class="form-group">
						<div class="row">
							<div class="col-md-4">
							<input type="submit" value="Sign in" class="btn btn-block btn-info" />	
							</div>
						</div>
						
					</div>
				</form>
			</div>
		</div>
				
	</div>
</div>